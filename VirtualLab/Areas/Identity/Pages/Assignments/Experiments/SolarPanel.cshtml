@page
@model SolarPanelModel
@{
}



@section scripts {
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script type="text/javascript" src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
	<script type="text/javascript" src="~/js/practicalExperiments/solarPanel.js"></script>
}
<br>

<link rel="stylesheet" type="text/css" href="~/css/practicalExperiments/solarPanel.css">
<h2>Experiment - 4 : Solar Panel</h2>
<div class="row">

	<div class="col-md-8">
		<div class="circuit-container js-circuit-container">
			<span class="solarPanel-circuit js-circuit"></span>

			<span class="solarPanel-circuit-connection a js-circuit-connection" id="zva"></span>
			<span class="solarPanel-circuit-connection b js-circuit-connection" id="yhb"></span>
			<span class="solarPanel-circuit-connection c js-circuit-connection" id="xvc"></span>
			<span class="solarPanel-circuit-connection d js-circuit-connection" id="whd"></span>
		</div>
	</div>

	<div class="col-md-4">
		<div class="drag-container">
			<div id="di21" class="drag-item">
				<p>Solar Panel</p>
				<img src="~/images/practicalExperiments/solarPanel/solarpanel.png" id="avu" class="img-svg rotateimg90" />
			</div>
		</div>
		<div class="drag-container">
			<div id="di22" class="drag-item">
				<p>Solar Panel</p>
				<img src="~/images/practicalExperiments/solarCellsSeries/solarpanel.png" id="bhw" class="img-svg" />
			</div>
		</div>

		<div class="drag-container">
			<div id="di22" class="drag-item">
				<p>Ammeter</p>
				<img src="~/images/practicalExperiments/solarPanel/ammeter.png" id="cvx" class="img-svg" />
			</div>
		</div>

		<div class="drag-container">
			<div id="di22" class="drag-item">
				<p>Voltmeter</p>
				<img src="~/images/practicalExperiments/solarCellsSeries/voltmeter.png" id="dhy" class="img-svg" />
			</div>
		</div>
	</div>

</div>

<div class="row">
	<div class="col-md-4">
		<form>
			<div class="form-group">
				<label for="resistanceSolarCellParallel">Resistance (Ω)</label>
				<input type="number" min="0" step="0.0001" class="form-control" id="resistanceBuck" name="resistanceBuck"
					   placeholder="Resistance (Ω)" required>
			</div>

			<div class="form-group">
				<label for="inductanceBuck">Inductance (μH)</label>
				<input type="number" min="0" step="0.0000000001" class="form-control" id="inductanceBuck" name="inductanceBuck"
					   placeholder="Inductance (μH)" required>
			</div>

			<div class="form-group">
				<label for="dutyCycleBuck">Duty Cycle (%)</label>
				<input type="number" min="0" step="0.0001" class="form-control" id="dutyCycleBuck" name="dutyCycleBuck"
					   placeholder="Duty Cycle (%)" required>
			</div>

			<div class="form-group">
				<label for="capacitanceBuck">Capacitance (μF)</label>
				<input type="number" min="0.0001" step="0.0000000001" class="form-control" id="capacitanceBuck"
					   name="capacitanceBuck" placeholder="Capacitance (μF)" required>
			</div>

			<div class="form-group">
				<label for="voltageInputBuck">Voltage Input (V)</label>
				<input type="number" min="0" step="0.0001" class="form-control" id="voltageInputBuck" name="voltageInputBuck"
					   placeholder="Voltage Input (V)" required>
			</div>

			<div class="form-group">
				<label for="frequencyBuck">Frequency (kHz)</label>
				<input type="number" min="0" step="1" class="form-control" id="frequencyBuck" name="frequencyBuck"
					   placeholder="Frequency (kHz)" required>
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>