<link rel="stylesheet" type="text/css" href="~/css/practicalExperiments/solarCellSeries.css">
@{
    if (Model.finalResult == null)
    {
        <h2>Experiment 6 : Solar Cells - Series Connection</h2>
        <div class="row">

