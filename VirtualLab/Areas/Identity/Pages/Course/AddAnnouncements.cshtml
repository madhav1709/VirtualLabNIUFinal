@page
@using VirtualLab.Models
@model AddAnnouncementsModel
@{
}
<h1>Add Announcement</h1>

<form method="post">
	<div class="form-group">
		<lable asp-for="Announcement.CourseId">Course ID</lable>
		<input class="form-control" asp-for="Announcement.CourseId" />
		<span asp-validation-for="Announcement.CourseId"></span>
	</div>
	<div class="form-group">
		<lable asp-for="Announcement.Title">Title</lable>
		<input class="form-control" asp-for="Announcement.Title" />
		<span asp-validation-for="Announcement.Title"></span>
	</div>
	<div class="form-group">
		<lable asp-for="Announcement.Content">Content</lable>
		<input class="form-control" asp-for="Announcement.Content" />
		<span asp-validation-for="Announcement.Content"></span>
	</div>
	<div class="form-group">
		<lable asp-for="Announcement.AnnouncementDate">Announcement Date</lable>
		<input class="form-control" asp-for="Announcement.AnnouncementDate" />
		<span asp-validation-for="Announcement.AnnouncementDate"></span>
	</div>
	<input type="submit" class="btn btn-primary" name="save" value="Save" />
</form>